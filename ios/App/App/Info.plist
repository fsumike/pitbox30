<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

	<!-- APP IDENTITY -->
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>

	<key>CFBundleDisplayName</key>
	<string>Pit-Box</string>

	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>

	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>

	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>

	<key>CFBundlePackageType</key>
	<string>APPL</string>

	<key>CFBundleShortVersionString</key>
	<string>1.0</string>

	<key>CFBundleVersion</key>
	<string>1</string>

	<key>LSRequiresIPhoneOS</key>
	<true/>

	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>

	<!-- ORIENTATION -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- CAMERA & PHOTOS -->
	<key>NSCameraUsageDescription</key>
	<string>Pit-Box uses your camera to capture photos and videos of racing sessions and vehicle setup.</string>

	<key>NSPhotoLibraryUsageDescription</key>
	<string>Pit-Box accesses your photo library to attach images to racing sessions.</string>

	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>Pit-Box saves captured media to your photo library.</string>

	<!-- LOCATION -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Pit-Box uses your location to log track positions and nearby racing events.</string>

	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Pit-Box records GPS telemetry during active racing sessions.</string>

	<!-- MOTION -->
	<key>NSMotionUsageDescription</key>
	<string>Pit-Box uses motion sensors to analyze driving forces.</string>

	<!-- MICROPHONE -->
	<key>NSMicrophoneUsageDescription</key>
	<string>Pit-Box records audio during video capture and voice notes.</string>

	<!-- BLUETOOTH -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Pit-Box connects to Bluetooth telemetry and OBD-II devices.</string>

	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>Pit-Box connects to Bluetooth peripherals for racing data.</string>

	<!-- LOCAL NETWORK -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>Pit-Box connects to local telemetry hardware.</string>

	<!-- CALENDAR -->
	<key>NSCalendarsUsageDescription</key>
	<string>Pit-Box can add racing events to your calendar.</string>

	<key>NSRemindersUsageDescription</key>
	<string>Pit-Box creates maintenance and race reminders.</string>

	<!-- CONTACTS -->
	<key>NSContactsUsageDescription</key>
	<string>Pit-Box allows sharing racing data with contacts.</string>

	<!-- SPEECH -->
	<key>NSSpeechRecognitionUsageDescription</key>
	<string>Pit-Box enables hands-free voice commands.</string>

	<!-- MUSIC -->
	<key>NSAppleMusicUsageDescription</key>
	<string>Pit-Box can play music during track days.</string>

	<!-- FACE ID -->
	<key>NSFaceIDUsageDescription</key>
	<string>Pit-Box protects your data using Face ID.</string>

	<!-- SIRI -->
	<key>NSSiriUsageDescription</key>
	<string>Pit-Box supports Siri voice commands.</string>

	<!-- HEALTH -->
	<key>NSHealthShareUsageDescription</key>
	<string>Pit-Box can read fitness metrics during sessions.</string>

	<key>NSHealthUpdateUsageDescription</key>
	<string>Pit-Box saves workout data from racing sessions.</string>

	<!-- FILE ACCESS -->
	<key>NSDocumentsFolderUsageDescription</key>
	<string>Pit-Box stores telemetry and session files.</string>

	<key>NSDownloadsFolderUsageDescription</key>
	<string>Pit-Box exports racing reports.</string>

	<!-- NETWORK -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- TRACKING -->
	<key>NSUserTrackingUsageDescription</key>
	<string>Pit-Box uses tracking to improve racing analytics.</string>

	<!-- STATUS BAR -->
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>

</dict>
</plist>
